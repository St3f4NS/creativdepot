{
	"autoprefixerBrowsers" : [
		"last 3 versions",
		"ie >= 8",
		"ios >= 7",
		"android >= 4.4",
		"bb >= 10"
	],

	"gzip_options" : {
		"threshold" : "1kb",
		"gzipOptions" : {
			"level" : 9
		}
	},

	"sourcePaths" : {
		"scss" : "resources/assets/sass/*.scss",
		"js" : [
			"resources/assets/js/*.js"
		],
		"php" : [
			"resources/**/*.php"
		],
		"svg" :	"resources/images/svg/*.svg"
	},

	"deployPaths" : {
		"scss" : "public/css",
		"js" : "public/js",
		"svg" : "public/images/svg/sprites"
	},

	"deployFiles" : {
		"scss" : "main.css",
		"js" : "main.js"
	},

	"cleanFiles" : [
		"resources/templates_mobile/css/main*.css",
		"resources/templates_mobile/js/main.min*.js"
	],

	"proxy" : "creativdepot.dev"
}
